<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>
	<classPathEntry
		location="C://Users//lifangyu//.m2//repository//mysql//mysql-connector-java//5.1.22//mysql-connector-java-5.1.22.jar" />
	<context id="Mysql" targetRuntime="MyBatis3"
		defaultModelType="flat">
		<!--去除注释 -->
		<commentGenerator>
			<!-- java 中文注释编码设置 
			eclipse.ini add:-Dfile.encoding=UTF-8
			<property name="javaFileEncoding" value="UTF-8" />  -->
			<property name="suppressAllComments" value="false"/><!-- 是否取消注释 -->  
			<property name="suppressDate" value="true" /> <!-- 是否生成注释代时间戳-->  
			<!--xml文件中入参不带jdbcType -->
			<property name="jdbcType" value="false" /> 
		</commentGenerator>

		<!--数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/spring"
			userId="root" password="root">
		</jdbcConnection>
		<!-- 类型转换 -->  
		<!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） --> 
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!--生成实体类 指定包名 以及生成的地址 （可以自定义地址，但是路径不存在不会自动创建 使用Maven生成在target目录下，会自动创建） -->
		<javaModelGenerator targetPackage="com.auth.model"
			targetProject="auth-manage\src\main\java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!--生成SQLMAP文件 -->
		<sqlMapGenerator targetPackage="mybatis_mappers"
			targetProject="auth-manage\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!--生成Dao文件 可以配置 type="XMLMAPPER"生成xml的dao实现 context id="DB2Tables" 修改targetRuntime="MyBatis3" -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.auth.dao"
			targetProject="auth-manage\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!--对应数据库表 mysql可以加入主键自增 字段命名 忽略某字段等 -->
		<table tableName="auth_menu"
			domainObjectName="AuthMenu" enableCountByExample="false"
			enableDeleteByExample="fasle" enableSelectByExample="false"
			enableUpdateByExample="false" selectByExampleQueryId="fasle" />
			
			<!-- 忽略列，不生成bean 字段  
			<ignoreColumn column="FRED" />  --> 
			<!-- 指定列的java数据类型  
			<columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" /> -->

	</context>
</generatorConfiguration>